#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"   "$basedir/../dockerlint/bin/dockerlint.js" "$@"
  ret=$?
else 
  node   "$basedir/../dockerlint/bin/dockerlint.js" "$@"
  ret=$?
fi
exit $ret
